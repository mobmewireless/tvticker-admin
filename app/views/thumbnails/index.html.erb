<h1>Listing thumbnails</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Original link</th>
    <th>Version</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @thumbnails.each do |thumbnail| %>
  <tr>
    <td><%= thumbnail.name %></td>
    <td><%= thumbnail.original_link %></td>
    <td><%= thumbnail.version_id %></td>
    <td><%= link_to 'Show', thumbnail %></td>
    <td><%= link_to 'Edit', edit_thumbnail_path(thumbnail) %></td>
    <td><%= link_to 'Destroy', thumbnail, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

