<h1>Listing categories</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Version</th>
    <th></th>
  </tr>

<% @categories.each do |category| %>
  <tr class="<%= cycle('program-line-odd', 'program-line-even') %>">
    <td><%= category.name %></td>
    <td><%= category.version_id %></td>
    <td class="program-actions">
    <%= link_to 'View', category %><br/>
    <%= link_to 'Edit', edit_category_path(category)  %><br/>
    <%= link_to 'Delete', category, :confirm => 'Are you sure?', :method => :delete %><br/>
    </td>
  </tr>
<% end %>
</table>

<br />
<%= paginate @categories %><br/>
<%= link_to 'New Category', new_category_path %>
