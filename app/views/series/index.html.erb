<div id="program-list" align="center">

<h1>Listing series</h1>

<table>
  <tr>
    <th>Thumbnail</th>
    <th>Name</th>
    <th>Version</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @series.each do |series| %>
  <tr class="<%= cycle('program-line-odd', 'program-line-even') %>">
    <td><%= thumbnail_tag series,{:class => 'program-thumbnail'} %></td>
     <td class="program-description">
    <dl>
        <dt><%= link_to series.name,build_imdb_link(series.imdb_info) %></dt>
        <dd><%= truncate(series.description.gsub(/<.*?>/,''),
              :length => 250) %>
        </dd>
        <dd>Rating: <%= series.rating %></dd>
    </dl>
    </td>
    <td><%= series.version_id%></td>
    <td class="program-actions">
    <%= link_to 'View', series %><br/>
    <%= link_to 'Edit', edit_series_path(series)  %><br/>
    <%= link_to 'Delete', series, :confirm => 'Are you sure?', :method => :delete %><br/>
    </td>
  </tr>
<% end %>
</table>

<br />
<%= paginate @series %><br/>
<%= link_to 'New Series', new_series_path %>

</div>