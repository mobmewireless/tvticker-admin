<h1>Listing series</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Imdb info</th>
    <th>Description</th>
    <th>Thumbnail link</th>
    <th>Rating</th>
    <th>Version</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @series.each do |series| %>
  <tr>
    <td><%= series.name %></td>
    <td><%= series.imdb_info %></td>
    <td><%= series.description %></td>
    <td><%= series.thumbnail_link %></td>
    <td><%= series.rating %></td>
    <td><%= link_to 'Show', series %></td>
    <td><%= link_to 'Edit', edit_series_path(series) %></td>
    <td><%= link_to 'Destroy', series, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

